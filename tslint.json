{
  "extends": "tslint:recommended",
  "rules": {
    "member-access": [true, "no-public"],
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "variable-name": false,
    "ordered-imports": false,
    "prefer-template": true
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "*.d.ts"
    ]
  }
}
